# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases (defined by you)
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi